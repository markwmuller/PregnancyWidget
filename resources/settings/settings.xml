<settings>
    
    <setting propertyKey="@Properties.dueDateYear" title="@Strings.dueDateYear">
        <settingConfig type="numeric" />
    </setting>
    
    <setting propertyKey="@Properties.dueDateMonth" title="@Strings.dueDateMonth">
        <settingConfig type="numeric" />
    </setting>
    
    <setting propertyKey="@Properties.dueDateDay" title="@Strings.dueDateDay">
        <settingConfig type="numeric" />
    </setting>
    
    <setting propertyKey="@Properties.titleMode" title="@Strings.titleMode">
        <settingConfig type="list">
            <listEntry value="1">@Strings.RandomHeckWord</listEntry>
            <listEntry value="2">@Strings.CustomTitle</listEntry>
            <listEntry value="3">@Strings.Nothing</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.customTitle" title="@Strings.customTitle">
        <settingConfig type="alphaNumeric" />
    </setting>
    
    <setting propertyKey="@Properties.printTimeToGo" title="@Strings.printTimeToGo">
        <settingConfig type="boolean" />
    </setting>
    
    <setting propertyKey="@Properties.accentColor" title="@Strings.accentColor">
        <settingConfig type="list">
            <listEntry value="1">@Strings.Green</listEntry>
            <listEntry value="2">@Strings.Blue</listEntry>
            <listEntry value="3">@Strings.Red</listEntry>
            <listEntry value="4">@Strings.Pink</listEntry>
            <listEntry value="5">@Strings.Orange</listEntry>
            <listEntry value="6">@Strings.Purple</listEntry>
        </settingConfig>
    </setting>
    
    <setting propertyKey="@Properties.useSillyUnits" title="@Strings.useSillyUnits">
        <settingConfig type="boolean" />
    </setting>
    
</settings>
